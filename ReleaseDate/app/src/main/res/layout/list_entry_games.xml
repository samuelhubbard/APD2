<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="110dp" android:background="@color/colorPrimary">

    <ImageView android:id="@+id/list_thumb"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:scaleType="fitXY"
        android:layout_width="75dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="160dp">

        <TextView android:id="@+id/list_name"
            android:paddingTop="3dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/list_date"
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/list_platforms"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>